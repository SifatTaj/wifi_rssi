<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LocateUserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp">

        <LinearLayout
            android:paddingHorizontal="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Enter place and floor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:paddingRight="10dp"
                    android:layout_weight="3"
                    android:id="@+id/etPlace"
                    android:text="idb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etFloor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:inputType="numberDecimal"
                    android:text="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvMapDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Map Description" />


            <com.example.wifirssi.view.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="1400dp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User location will appear here" />

        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:text="27_119_1"
                android:id="@+id/etDest"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btNavigate"
                android:layout_weight="1"
                android:text="navigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/rgArchitecture"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbTcp"
                android:checked="true"
                android:paddingRight="20dp"
                android:text="TCP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectArchitecture" />

            <RadioButton
                android:id="@+id/rbNdn"
                android:text="NDN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectArchitecture" />

        </RadioGroup>

        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:id="@+id/btLocateUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Locate"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/btLoadMap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Load Map"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/btDetectFloor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Detect Floor"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>